extends sup_header
block content
  u Timesheet
  .container
    form(method='post', action='/timesheets/sup/edit/'+sheet._id)
      .form-group
        h1
          label Employee Name:
        input.form-control(type='text', name='emp_name',value = sheet.empname,readonly = 'true')
        h1
          label Employee Project
        input.form-control(type='text', name='emp_project',value = sheet.projecttitle,readonly = 'true')
        h1
          label Select Date
        input.form-control(type='date', name='timesheet_date',required='true',value = sheet.date,max = '2018-05-01')
        h1
          label From Time:
        input.form-control(type='time', name='timesheet_from_date',required='true',value= sheet.fromtime)
        h1
          label To Time:
        input.form-control(type='time', name='timesheet_to_date',required='true',value = sheet.totime)
      button.btn.btn-primary(type='submit') Edit
      a.btn.btn-default(href='/get_sup_timesheets') Back
